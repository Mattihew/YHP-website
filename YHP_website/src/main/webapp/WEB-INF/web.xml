<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>ProductsServlet</servlet-name>
  	<display-name>ProductsServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.ProductsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AccountServlet</servlet-name>
  	<display-name>AccountServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.AccountServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>OrderServlet</servlet-name>
  	<display-name>OrderServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.OrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddProductToOrderServlet</servlet-name>
  	<display-name>AddProductToOrderServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.AddProductToOrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RemoveProductFromOrderServlet</servlet-name>
  	<display-name>RemoveProductFromOrderServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.RemoveProductFromOrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AdminServlet</servlet-name>
  	<display-name>AdminServlet</display-name>
  	<description></description>
  	<servlet-class>servlets.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ProductsServlet</servlet-name>
  	<url-pattern>/Products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AccountServlet</servlet-name>
  	<url-pattern>/Account</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>OrderServlet</servlet-name>
  	<url-pattern>/Order</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddProductToOrderServlet</servlet-name>
  	<url-pattern>/AddProductToOrder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RemoveProductFromOrderServlet</servlet-name>
  	<url-pattern>/RemoveProductFromOrder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdminServlet</servlet-name>
  	<url-pattern>/Admin</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>Products</welcome-file>
  </welcome-file-list>
  <resource-ref>
  	<res-ref-name>jdbc/YHP</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  	<res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
  
  <security-constraint>
    <web-resource-collection>
        <web-resource-name>my application</web-resource-name>
        <url-pattern>/Admin</url-pattern>
        <http-method>GET</http-method>
        <http-method>POST</http-method>
    </web-resource-collection>

    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
        <form-login-page>/</form-login-page>
        <form-error-page>/pages/loginFail.html</form-error-page>
    </form-login-config>
  </login-config>
  <security-role><role-name>admin</role-name></security-role>
</web-app>
